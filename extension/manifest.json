{
    "manifest_version": 3,
    "name": "Revery",
    "version": "0.1",

    "action": {
        "default_title": "Search Monocle with this page"
    },
    "description": "Context-aware search built on document embeddings and the Monocle corpus",

    "background": {
        "service_worker": "worker.js"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["Readability.js",  "torus.min.js", "content.js"],
            "run_at": "document_idle"
        }
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+L",
                "mac": "Command+Shift+L"
            }
        }
    },

    "homepage_url": "https://github.com/thesephist/revery",
    "incognito": "spanning",
    "offline_enabled": false,
    "permissions": ["tabs"]
}
